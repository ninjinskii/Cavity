<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScrollableTab">
        <attr name="selectedColor" format="color" />
        <attr name="unSelectedColor" format="color" />
        <attr name="tabTextAppearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="AnimatedCheckBox">
        <attr name="delayBeforeRepeat" format="integer" />
    </declare-styleable>

    <declare-styleable name="RuledTextInputLayout">
        <attr name="rule">
            <flag name="absent" value="0" />
            <flag name="required" value="1" />
            <flag name="integer" value="2" />
            <flag name="floating" value="4" />
            <flag name="doubling" value="8" />
            <flag name="positive" value="16" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SliceBarView">
        <attr name="waitAnimationTriggerBeforeDraw" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LabeledData">
        <attr name="label" format="string" />
        <attr name="icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="HexagonalView">
        <attr name="flat" format="boolean" />
        <attr name="markerColor" format="reference" />
    </declare-styleable>

    <declare-styleable name="EmptyStateView">
        <attr name="bigIcon" format="reference" />
        <attr name="text" format="string" />
        <attr name="actionText" format="string" />
        <attr name="secondaryActionText" format="string" />
    </declare-styleable>
</resources>
