<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.chip.Chip
        android:id="@+id/vintage"
        android:layout_width="wrap_content"
        style="@style/Widget.Cavity.Chip.Choice"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/small_margin"
        android:checkable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="2020" />

    <TextView
        android:id="@+id/drunkAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:textAppearance="?attr/textAppearanceCaption"
        app:layout_constraintTop_toTopOf="@id/vintage"
        app:layout_constraintBottom_toBottomOf="@id/vintage"
        app:layout_constraintStart_toEndOf="@id/vintage"
        tools:text="21/03/2021" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="@dimen/small_margin"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintTop_toBottomOf="@id/vintage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Tanique, notes de champignons. Peut vieillir. On va rajouter du texte pour que Ã§a aille sur plusieurs lignes" />

</androidx.constraintlayout.widget.ConstraintLayout>
